Bootstrap: localimage
From: ./images/npm_install.sif

%environment
    export PORT=3000

%files
    ./presentation /usr/src/app/presentation
    ./index.html /usr/src/app/index.html
    ./reveal/* /usr/src/app/reveal/

%post
    ln -s /usr/src/app/presentation /usr/src/app/reveal/presentation
    ln /usr/src/app/index.html /usr/src/app/reveal/index.html

%runscript
    # This script runs when you execute the container
    cd /usr/src/app/reveal
    nohup npm start
